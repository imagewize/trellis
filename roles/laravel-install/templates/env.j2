APP_NAME="{{ site_env.APP_NAME | default(item.key) }}"
APP_ENV="{{ site_env.APP_ENV | default(site_env.wp_env) }}"
APP_KEY="{{ site_env.APP_KEY | default('base64:') }}"
APP_DEBUG="{{ site_env.APP_DEBUG | default('false') }}"
APP_URL="{{ site_env.APP_URL | default(site_env.wp_home) }}"

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST="{{ site_env.db_host }}"
DB_PORT=3306
DB_DATABASE="{{ site_env.db_name }}"
DB_USERNAME="{{ site_env.db_user }}"
DB_PASSWORD="{{ site_env.db_password }}"

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

MEMCACHED_HOST=127.0.0.1

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST="{{ site_env.MAIL_HOST | default('mailhog') }}"
MAIL_PORT="{{ site_env.MAIL_PORT | default('1025') }}"
MAIL_USERNAME="{{ site_env.MAIL_USERNAME | default(null) }}"
MAIL_PASSWORD="{{ site_env.MAIL_PASSWORD | default(null) }}"
MAIL_ENCRYPTION="{{ site_env.MAIL_ENCRYPTION | default(null) }}"
MAIL_FROM_ADDRESS="{{ site_env.MAIL_FROM_ADDRESS | default('hello@example.com') }}"
MAIL_FROM_NAME="{{ site_env.MAIL_FROM_NAME | default(site_env.APP_NAME | default(item.key)) }}"

AWS_ACCESS_KEY_ID="{{ site_env.AWS_ACCESS_KEY_ID | default('') }}"
AWS_SECRET_ACCESS_KEY="{{ site_env.AWS_SECRET_ACCESS_KEY | default('') }}"
AWS_DEFAULT_REGION="{{ site_env.AWS_DEFAULT_REGION | default('us-east-1') }}"
AWS_BUCKET="{{ site_env.AWS_BUCKET | default('') }}"
AWS_USE_PATH_STYLE_ENDPOINT="{{ site_env.AWS_USE_PATH_STYLE_ENDPOINT | default('false') }}"

PUSHER_APP_ID="{{ site_env.PUSHER_APP_ID | default('') }}"
PUSHER_APP_KEY="{{ site_env.PUSHER_APP_KEY | default('') }}"
PUSHER_APP_SECRET="{{ site_env.PUSHER_APP_SECRET | default('') }}"
PUSHER_HOST="{{ site_env.PUSHER_HOST | default('') }}"
PUSHER_PORT="{{ site_env.PUSHER_PORT | default('443') }}"
PUSHER_SCHEME="{{ site_env.PUSHER_SCHEME | default('https') }}"
PUSHER_APP_CLUSTER="{{ site_env.PUSHER_APP_CLUSTER | default('mt1') }}"

VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"